
/* 输入用户信息 */
.input-lists{
  margin-top: 40px;
  padding-right: 15px;
  padding-left: 15px;
  background-color: #fff;
}

.input-lists > view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 43px;
  font-size: 15px;
  box-sizing: border-box;
}

.input-lists > view label{
  display: flex;
  align-items: center;
  width: 74px;
  height: 100%;
}

.input-lists > view input{
  flex: 1;
  height: 100%;
  color: #999;
  font-size: 13px;
}

.input-lists > view:not(:first-child){
  border-top: 1px solid #d7d7d7;
}

/* 修改密码 */
.change-password {
  display: flex;
  justify-content: center;
  width: 230px;
  margin-right: auto;
  margin-left: auto;
  padding: 12px 5px 0;
  font-size: 12px;
  color: rgba(78, 178, 218, .8);
  box-sizing: border-box;
}